{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Pytest with HTML Report",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/bin/python -m pytest -v --capture=no --html=tests/reports/test_output.html",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "echo": true,
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        }
    ]
}